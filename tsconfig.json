{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,

    "plugins": [
      {
        "name": "next"
      }
    ],

    "baseUrl": "./",
    "paths": {
      "@protos/*": ["submodules/blitzkit-closed/src/unreal/protos/*"]
    }
  },
  "exclude": ["node_modules/**/*", "dist", ".next"]
}
