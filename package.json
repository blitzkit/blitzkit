{
  "name": "blitzkit",
  "private": true,
  "version": "1.22.6",
  "description": "ðŸŽ‰ Tools for everything World of Tanks Blitz",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:assets": "bun scripts/buildAssets/index.ts",
    "build:averages": "bun scripts/averages",
    "build:bot": "rm -rf dist/bot && mkdir -p dist/bot/prisma && bun build src/index.ts src/workers/bot.ts src/workers/render.ts --outdir dist/bot --target=bun --splitting --sourcemap=inline --external sharp && cp -R src/lang dist/bot/lang && prisma generate && cp prisma/schema.prisma dist/bot/prisma/schema.prisma && cp -R node_modules/prisma/*.node dist/bot/prisma && cd dist/bot && bun init -y && bun add sharp",
    "build:website": "prisma generate & bun build:sitemap && next build",
    "build:sitemap": "bun scripts/sitemap.ts",
    "build:docs": "vitepress build docs",
    "build:ratingleaderboard": "bun --script scripts/buildRatingLeaderboard.ts",
    "dev:bot": "bun build:bot && bun start:bot",
    "dev:docs": "vitepress dev docs",
    "dev:website": "next dev",
    "start:bot": "bun dist/bot/index.js",
    "start:website": "next start",
    "host:docs": "vitepress preview docs",
    "lint": "tsc",
    "lint:website": "next lint",
    "format": "prettier --write \"**/*.@(json|js|jsx|css|md|ts|tsx|html|xml|yml|gltf)\"",
    "knip": "knip",
    "update": "yarn upgrade --latest",
    "tunnel": "cloudflared tunnel --url http://localhost:3000",
    "discoverids": "scripts/discoverIds.ts"
  },
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "typescript": "^5.5.4"
  },
  "_dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@types/three": "^0.160.0",
    "@vanilla-extract/css": "^1.15.5",
    "csv-parse": "^5.5.6",
    "esbuild": "^0.19.12",
    "express": "^4.19.2",
    "false": "^0.0.4",
    "fuzzysort": "^2.0.4",
    "parse-dds": "^1.2.1",
    "postprocessing": "^6.36.0",
    "three-stdlib": "^2.32.2",
    "urlon": "^3.1.0"
  },
  "_devDependencies": {
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bun": "latest",
    "@types/escape-html": "^1.0.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.3",
    "@types/parse-dds": "^1.0.3",
    "@types/pngjs": "^6.0.5",
    "knip": "^3.13.2",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1"
  }
}
