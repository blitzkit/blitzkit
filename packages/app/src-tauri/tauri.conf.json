{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "blitzkit",
  "version": "0.1.0",
  "identifier": "com.tresabhi.blitzkit",
  "build": {
    "beforeDevCommand": "cd ../website && bun run dev",
    "_beforeBuildCommand": "cd ../website && bun run build",
    "frontendDist": "../../../dist/website/client",
    "devUrl": "http://localhost:4321"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "url": "http://localhost:4321",
        "title": "BlitzKit",
        "fullscreen": false,
        "resizable": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
