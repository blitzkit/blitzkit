---
import "@radix-ui/colors/violet-dark.css";
import { api } from "../../../core/api/dynamic";
import BaseLayout from "../../../layouts/BaseLayout.astro";

export { getStaticPaths } from "../index.astro";

const tankList = await api.tankList();
---

<BaseLayout accent="violet">
  <h1>tanks</h1>

  {
    tankList.list.map(({ id, slug }) => (
      <p>
        <a href={`/tanks/${slug}`}>
          {slug} ({id})
        </a>
      </p>
    ))
  }
</BaseLayout>
