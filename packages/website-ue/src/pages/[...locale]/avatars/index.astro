---
import ColorScale from "../../../components/ColorScale.astro";
import ToolBanner from "../../../components/ToolBanner.astro";
import { tools } from "../../../core/tools/tools";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { Page } from "./_index";

export { getStaticPaths } from "../index.astro";

const { locale } = Astro.props;
---

<BaseLayout selectedTool={tools.avatars} {locale} accent="gold">
  <ColorScale color="purple" />
  <ColorScale color="blue" />

  <ToolBanner {locale} tool={tools.avatars} slot="pre-app" />
  <Page {locale} client:load />
</BaseLayout>
