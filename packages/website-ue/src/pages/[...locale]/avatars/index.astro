---
import Section from "../../../components/Section.astro";
import ToolBanner from "../../../components/ToolBanner.astro";
import { tools } from "../../../core/tools/tools";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { Page } from "./_index";

export { getStaticPaths } from "../index.astro";

const { locale } = Astro.props;
---

<style is:global>
  .avatars {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(var(--space-7), 1fr));
    gap: var(--space-5) var(--space-4);
  }
</style>

<BaseLayout {locale} accent="gold">
  <ToolBanner {locale} tool={tools.avatars} slot="pre-app" />

  <Section>
    <Page {locale} client:only="react">
      <Page {locale} skeleton slot="fallback" />
    </Page>
  </Section>
</BaseLayout>
