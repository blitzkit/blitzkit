---
import { avatarsTool } from 'packages/website-ue/src/constants/tools';
import { api } from 'packages/website-ue/src/core/blitzkit/api';
import ToolLayout from 'packages/website-ue/src/layouts/ToolLayout.astro';
import { Page } from './_index';

export { getStaticPaths } from '../index.astro';

const { locale } = Astro.props;

const gameStrings = await api.metadata.stringsPartial(locale, [
  'ProfileAvatarEntity__*',
]);
---

<ToolLayout tool={avatarsTool} {locale}>
  <Page localeData={{ locale, gameStrings }} client:load />
</ToolLayout>
