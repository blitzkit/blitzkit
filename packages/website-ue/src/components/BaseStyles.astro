---
import "@fontsource-variable/jetbrains-mono";
import "@fontsource-variable/roboto-flex";
---

<style>
  :root {
    --space-0: 0.0625rem;
    --space-1: 0.125rem;
    --space-2: 0.25rem;
    --space-3: 0.5rem;
    --space-4: 1rem;
    --space-5: 2rem;
    --space-6: 4rem;
    --space-7: 8rem;
    --space-8: 16rem;
    --space-9: 32rem;

    --max-size: max(100vw, 100vh);

    --font-size-regular: 1rem;
    --font-size-minor: 0.75rem;

    --font-family-regular: "Roboto Flex Variable", sans-serif;
    --font-family-mono: "JetBrains Mono Variable", monospace;

    --weight-light: 300;
    --weight-regular: 400;
    --weight-medium: 500;
    --weight-bold: 700;
    --weight-black: 900;

    --outline-interactive: solid var(--space-1) var(--gray-5);
    --outline-focus: var(--space-1) solid var(--accent-6);

    --shadow-cavity:
      inset var(--space-1) var(--space-1) var(--space-1) var(--gray-2),
      inset calc(var(--space-1) * -1) calc(var(--space-1) * -1) var(--space-1)
        var(--gray-4);
    --shadow-focus: 0 0 var(--space-3) var(--accent-4);
  }
</style>
