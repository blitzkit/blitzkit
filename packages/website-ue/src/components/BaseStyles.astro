---
import "@fontsource-variable/jetbrains-mono";
import "@fontsource-variable/roboto-flex";
---

<style>
  :root {
    --space-0: 0.0625rem;
    --space-1: 0.125rem;
    --space-2: 0.25rem;
    --space-3: 0.5rem;
    --space-4: 1rem;
    --space-5: 2rem;
    --space-6: 4rem;
    --space-7: 8rem;
    --space-8: 16rem;
    --space-9: 32rem;

    --page-width: 52rem;

    --max-size: max(100vw, 100vh);

    --font-size-regular: 1rem;
    --font-size-minor: 0.75rem;
    --font-size-major: 1.25rem;

    --font-family-regular: "Roboto Flex Variable", sans-serif;
    --font-family-mono: "JetBrains Mono Variable", monospace;

    --color-regular: var(--gray-12);
    --color-low-contrast: var(--gray-11);

    --weight-light: 300;
    --weight-regular: 400;
    --weight-medium: 500;
    --weight-bold: 700;
    --weight-black: 900;

    --outline-focus: var(--space-1) solid var(--accent-6);

    --shadow-cavity:
      inset calc(var(--space-1) * sin(45deg)) calc(var(--space-1) * sin(45deg))
        var(--space-1) var(--black-a3),
      inset calc(var(--space-1) * sin(45deg) * -1)
        calc(var(--space-1) * sin(45deg) * -1) var(--space-1) var(--white-a1);

    --shadow-bump:
      inset calc(var(--space-1) * sin(45deg)) calc(var(--space-1) * sin(45deg))
        var(--space-1) var(--white-a3),
      inset calc(var(--space-1) * sin(45deg) * -1)
        calc(var(--space-1) * sin(45deg) * -1) var(--space-1) var(--black-a3);

    --shadow-outline-width: 1.5px;
    --shadow-outline-width-negative: calc(var(--shadow-outline-width) * -1);

    --shadow-interactive-background: 0 0 0 var(--shadow-outline-width)
      var(--gray-6);
    --shadow-interactive-shine: var(--shadow-outline-width-negative)
      var(--shadow-outline-width-negative) var(--shadow-outline-width)
      var(--white-a1);
    --shadow-interactive-shadow: var(--shadow-outline-width)
      var(--shadow-outline-width) var(--shadow-outline-width) var(--black-a4);
    --shadow-interactive:
      var(--shadow-interactive-shine), var(--shadow-interactive-shadow),
      var(--shadow-interactive-background);

    --shadow-subtle: var(--space-1) var(--space-1) var(--space-4)
      var(--black-a11);

    --blur-glass: blur(4rem);
  }
</style>
