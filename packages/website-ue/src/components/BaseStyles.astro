---
import "@fontsource-variable/roboto-flex";
import "@fontsource-variable/roboto-mono";
---

<style is:global>
  @import "@radix-ui/colors/mauve-dark.css";
  @import "@radix-ui/colors/mauve-alpha.css";

  body {
    --space-0: 0.0625rem;
    --space-1: 0.125rem;
    --space-2: 0.25rem;
    --space-3: 0.5rem;
    --space-4: 1rem;
    --space-5: 2rem;
    --space-6: 4rem;
    --space-7: 8rem;
    --space-8: 16rem;
    --space-9: 32rem;

    --weight-thin: 100;
    --weight-extra-light: 200;
    --weight-light: 300;
    --weight-regular: 400;
    --weight-medium: 500;
    --weight-semibold: 600;
    --weight-bold: 700;
    --weight-extra-bold: 800;
    --weight-black: 900;

    --font-size-regular: var(--space-4);

    --max-size: max(100vw, 100vh);

    --outline-interactive: solid var(--space-1) var(--gray-5);
    --outline-focus: var(--space-1) solid var(--accent-6);

    --shadow-cavity:
      inset var(--space-1) var(--space-1) var(--space-1) var(--gray-2),
      inset calc(var(--space-1) * -1) calc(var(--space-1) * -1) var(--space-1)
        var(--gray-4);
    --shadow-focus: 0 0 var(--space-3) var(--accent-4);

    background-color: var(--gray-1);
    color: var(--gray-12);
    font-family: "Roboto Flex";

    display: flex;
    flex-direction: column;
  }

  body {
    margin: 0;
  }
</style>
