---
import { MagnifyingGlassIcon } from "@radix-ui/react-icons";
import { BlitzKitIcon } from "../icons/BlitzKit";
import { Code } from "./Code";
import { TextField } from "./TextField";

const strings = { home: { search: "test" } };
---

<style>
  .home-hero {
    display: flex;
    flex-direction: column;
    justify-content: end;
    align-items: center;
    padding: 0 var(--space-4);
    position: relative;

    .wallpaper {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: calc(100% - var(--space-5) / 2);

      z-index: -1;

      background-image: url(/assets/home-hero.webp);
      background-size: cover;
      background-position: top;

      .gradient {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        gap: var(--space-7);

        width: 100%;
        height: 100%;

        background: linear-gradient(transparent, var(--gray-1));
      }
    }

    .name {
      margin: var(--space-6) 0;

      .icon-wrapper {
        position: relative;

        width: var(--space-6);
        height: var(--space-6);

        .icon {
          width: 100%;
          height: 100%;
        }

        .version {
          position: absolute;
          top: 0;
          right: 0;
          transform: translate(100%, 0);
          padding-left: var(--space-2);

          font-weight: var(--weight-bold);
          letter-spacing: -0.15em;
        }
      }
    }

    .text-field {
      width: 100%;
    }
  }
</style>

<div class="home-hero">
  <div class="wallpaper">
    <div class="gradient"></div>
  </div>

  <div class="name">
    <div class="icon-wrapper">
      <BlitzKitIcon className="icon" />
      <Code className="version">2.0</Code>
    </div>
  </div>

  <TextField placeholder={strings.home.search}>
    <MagnifyingGlassIcon />
  </TextField>
</div>
