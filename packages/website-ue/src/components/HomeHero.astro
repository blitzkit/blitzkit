---
import { TextField } from "./TextField";
---

<style>
  .home-hero {
    display: flex;
    flex-direction: column;
    align-items: center;

    .wallpaper {
      width: 100%;
      background-image: url(/assets/home-hero.webp);
      background-size: cover;
      background-position: top;
      height: 13rem;

      .wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        gap: var(--space-7);

        width: 100%;
        height: 100%;

        background: linear-gradient(transparent, var(--gray-1));
      }
    }

    input {
      width: 100%;
    }
  }
</style>

<div class="home-hero">
  <div class="wallpaper">
    <div class="wrapper"></div>
  </div>

  <TextField placeholder="asdasdasd" />
</div>
