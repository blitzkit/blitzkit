---
import type { Color } from "../core/ui/color";

interface Props {
  color: Color;
  alias: string;
  alpha?: boolean;
}

const { color, alias, alpha } = Astro.props;

let styles = "";

styles += ":root{";

for (let i = 0; i < 12; i++) {
  const n = i + 1;
  styles += `--${alias}-${alpha ? "a" : ""}${n}:var(--${color}-${alpha ? "a" : ""}${n});`;
}

styles += "}";
---

<style set:html={styles}></style>
