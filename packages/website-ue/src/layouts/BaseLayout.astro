---
import "@fontsource-variable/inter";
import BaseMeta from "../components/BaseMeta.astro";
import BaseStyles from "../components/BaseStyles.astro";
import Navbar from "../components/Navbar.astro";
import type { Color } from "../pages/styles/colors/[accent].css";

interface Props {
  accent: Color;
  noNavbar?: boolean;
}

const { accent, noNavbar } = Astro.props;
---

<html>
  <head>
    <BaseMeta />
    <BaseStyles {accent} />
  </head>

  <body class="dark">
    {!noNavbar && <Navbar />}
    <slot />
  </body>
</html>
