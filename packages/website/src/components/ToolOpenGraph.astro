---
import { imgur } from '@blitzkit/core';
import { type Tool } from '../constants/tools';
import { getStrings } from '../core/i18n/getStrings';

interface Props {
  tool: Tool;
}

const { tool } = Astro.props;
const { locale } = Astro.params;
const strings = getStrings(locale);
const toolStrings =
  strings.website.tools[
    (tool.stringsId ?? tool.id) as keyof typeof strings.website.tools
  ];
---

<title>{toolStrings.name}</title>
<meta property="og:image" content={imgur(tool.image)} />
<meta name="description" content={toolStrings.seo_description} />
<meta property="og:description" content={toolStrings.seo_description} />
