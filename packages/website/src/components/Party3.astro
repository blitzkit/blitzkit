---
import { assertSecret } from '@blitzkit/core';

const PUBLIC_GOOGLE_TAG_MANAGER_ID = assertSecret(
  import.meta.env.PUBLIC_GOOGLE_TAG_MANAGER_ID,
);
---

{/* google analytics */}
<script
  is:inline
  async
  type="text/partytown"
  src={`https://www.googletagmanager.com/gtag/js?id=${PUBLIC_GOOGLE_TAG_MANAGER_ID}`}
></script>
<script
  is:inline
  define:vars={{ PUBLIC_GOOGLE_TAG_MANAGER_ID }}
  type="text/partytown"
>
  window.dataLayer = window.dataLayer || [];

  function gtag() {
    dataLayer.push(arguments);
  }
  gtag('js', new Date());
  gtag('config', PUBLIC_GOOGLE_TAG_MANAGER_ID);
</script>

<script
  is:inline
  src="https://demo.rybbit.io/api/script.js"
  site-id="14"
  defer
  type="text/partytown"></script>

