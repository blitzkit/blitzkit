---
import { assertSecret } from '@blitzkit/core';
---

{/* google analytics */}
<script
  is:inline
  async
  src={`https://www.googletagmanager.com/gtag/js?id=${assertSecret(
    import.meta.env.PUBLIC_GOOGLE_TAG_MANAGER_ID,
  )}`}></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];

  function gtag() {
    dataLayer.push(arguments);
  }
  gtag('js', new Date());
  gtag('config', assertSecret(import.meta.env.PUBLIC_GOOGLE_TAG_MANAGER_ID));
</script>

