---
import { getStrings } from '../core/i18n/getStrings';

export interface Props {
  path: string;
}

const { path } = Astro.props;
const { locale } = Astro.params;

const strings = getStrings(locale);
const resolvedPath = `/${locale === undefined ? '' : `${locale}/`}${path}`;
---

<html>
  <head>
    <meta charset="utf-8" />
    <link rel="canonical" href={`${Astro.url.origin}${resolvedPath}`} />
    <meta http-equiv="refresh" content={`0; url=${resolvedPath}`} />
  </head>

  <body>
    <div
      style={{
        display: 'flex',
        flexDirection: 'column',
        alignItems: 'center',
        justifyContent: 'center',
        width: '100vw',
        height: '100vh',
        backgroundColor: 'black',
        color: 'white',
        fontFamily: 'sans-serif',
      }}
    >
      <h2>{strings.website.redirect.title}</h2>
      <span>{strings.website.redirect.body}</span>
    </div>
  </body>
</html>
