---
import { Flex } from '@radix-ui/themes';
import { BlitzKitTheme } from '../components/BlitzKitTheme';
import { Checks } from '../components/Checks';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import Party3 from '../components/Party3.astro';
import './base.css';

export interface Props {
  noFooter?: boolean;
}

const { noFooter } = Astro.props;
const { pathname } = Astro.url;
const isRoot = pathname === '/';
---

<html lang="en">
  <head>
    {
      isRoot && (
        <>
          <title>BlitzKit</title>
          <meta
            name="description"
            content="ðŸŽ‰ Tools for everything World of Tanks Blitz"
          />
        </>
      )
    }
    <meta property="og:site_name" content="BlitzKit" />
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <Party3 />
  </head>

  <body>
    <BlitzKitTheme>
      <Flex direction="column" minHeight="100vh">
        <Navbar />

        <Checks client:only="react" />

        <slot />

        {!noFooter && <Footer />}
      </Flex>
    </BlitzKitTheme>
  </body>
</html>
