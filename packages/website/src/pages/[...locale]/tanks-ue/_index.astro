---
import { CatalogItemsComponent } from '@protos/blitz_static_catalog_items_group_component';
import { Link } from '@radix-ui/themes';
import { PageWrapper } from 'packages/website/src/components/PageWrapper';
import { unpackedMetadata } from 'packages/website/src/core/blitz/unpackedMetadata';
import BaseLayout from 'packages/website/src/layouts/BaseLayout.astro';

export { getStaticPaths } from '../index.astro';

const { locale } = Astro.props;

const allTanks = unpackedMetadata
  .get('CatalogItemsGroupEntity.all_tanks')
  .get(CatalogItemsComponent, 'catalogItemsGroupComponent');
---

<BaseLayout {locale}>
  <PageWrapper>
    {allTanks.catalog_items.map((tank) => <Link>{tank}</Link>)}
  </PageWrapper>
</BaseLayout>
