---
import { Flex, Heading, Text } from '@radix-ui/themes';
import { PageWrapper } from '../../../components/PageWrapper';
import RootLayout from '../../../layouts/RootLayout.astro';
import { Toggles } from './_index';
---

<RootLayout>
  <PageWrapper justify="center">
    <Flex direction="column" gap="1">
      <Heading>Do not sell my personal information</Heading>
      <Text>
        BlitzKit does not sell any of your personal information. However,
        third-party party services may use your personal information to enhance
        your experience and to collect analytics. You can stop the sale of your
        personal data using the option below.
      </Text>
    </Flex>

    <Toggles client:load />
  </PageWrapper>
</RootLayout>
